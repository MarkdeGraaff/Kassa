<Window x:Name="Win_Main" x:Class="Kassasys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kassasys"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Initialized="Win_Main_Initialized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="683*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="menuknoppen" Margin="0,76,0.333,0" HorizontalAlignment="Right" Width="100" Height="335" VerticalAlignment="Top" Grid.Column="2">
            <Button x:Name="but_Fris" Content="Fris" Height="85" Margin="0,0,0.333,0" FontWeight="Bold" FontSize="22" Click="But_Fris_Click">
                <Button.Background>
                    <ImageBrush ImageSource="c:\temp\download.jpg"/>
                </Button.Background>
            </Button>
            <Button x:Name="but_Salade" Content="Button" Height="85" Margin="0,0,0.333,0" Click="But_Salade_Click">
                <Button.Background>
                    <ImageBrush ImageSource="c:\temp\salade.jpg"/>
                </Button.Background>
            </Button>
            <Button Content="Button" Height="85" Margin="0,0,0.333,0"/>
            <Button Content="Button" Height="85" Margin="0,0,0.333,0"/>
        </StackPanel>
        <Canvas x:Name="Canvas_Fris" HorizontalAlignment="Center" Height="335" Margin="206,76,130.333,0" VerticalAlignment="Top" Width="347" Grid.Column="2">
            <Button Content="Fanta" Height="64" Width="111" FontWeight="Bold"/>
            <Button Content="Cola" Height="64" Width="111" Canvas.Left="116" FontWeight="Bold"/>
            <Button Content="7Up" Height="64" Width="111" Canvas.Left="232" FontWeight="Bold"/>
            <Button Content="Tonic" Height="64" Width="111" Canvas.Top="69" FontWeight="Bold"/>
            <Button Content="Fernandes" Height="64" Width="111" Canvas.Left="116" Canvas.Top="69" FontWeight="Bold"/>
        </Canvas>
        <Canvas x:Name="Canvas_Salade" HorizontalAlignment="Left" Height="335" Margin="206,76,0,0" VerticalAlignment="Top" Width="347" Grid.Column="2">
            <Button Content="Ceasar" Height="64" Width="111" FontWeight="Bold" Click="Button_Click"/>
            <Button Content="Niecoise" Height="64" Width="111" Canvas.Left="116" FontWeight="Bold" ClipToBounds="True"/>
        </Canvas>

    </Grid>
</Window>
